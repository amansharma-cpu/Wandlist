      <div><i class="fa-solid fa-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-object-group"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-gem"></i></div>
      <p>Amazing view</p>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-hotdog"></i></div>
      <p>Suffering</p>
